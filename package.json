{
  "name": "meupersonal-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "turbo run clean",
    "mobile:dev": "pnpm --filter @meupersonal/mobile dev",
    "mobile:android": "pnpm --filter @meupersonal/mobile android",
    "mobile:ios": "pnpm --filter @meupersonal/mobile ios",
    "web:dev": "pnpm --filter @meupersonal/web dev",
    "web:build": "pnpm --filter @meupersonal/web build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "turbo": "^2.3.0",
    "typescript": "~5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}